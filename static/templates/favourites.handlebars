<h2 class="centered">Favourites</h2>
<div class="scrollable">
	<ol>
		{{#each this}}
			<li>
				<a href="#{{@key}}">
					{{this}} ({{@key}})
				</a>
				&nbsp;
				<a class="edit-favourite" data-stop-id="{{@key}}">
					<img src="imgs/edit.png" width="20px" />
				</a>
				<a class="remove-favourite" data-stop-id="{{@key}}">
					<img src="imgs/remove.png" width="20px" />
				</a>
			</li>
		{{/each}}
	</ol>
</div>
